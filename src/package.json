{
  "name": "lineleap-backend",
  "version": "1.0.0",
  "main": "server.cjs",
  "_moduleAliases": {
    "@": "."
  },
  "dependencies": {
    "@opentelemetry/api": "^1.7.0",
    "@opentelemetry/exporter-prometheus": "^0.48.0",
    "@opentelemetry/instrumentation-express": "^0.35.0",
    "@opentelemetry/instrumentation-http": "^0.48.0",
    "@opentelemetry/instrumentation-mongodb": "^0.40.0",
    "@opentelemetry/resources": "^1.21.0",
    "@opentelemetry/sdk-node": "^0.48.0",
    "@opentelemetry/semantic-conventions": "^1.21.0",
    "auth0": "^4.18.0",
    "compression": "^1.7.5",
    "connect-timeout": "^1.9.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-openid-connect": "^2.15.0",
    "express-rate-limit": "^6.11.2",
    "helmet": "^7.1.0",
    "http": "^0.0.1-security",
    "ioredis": "^5.5.0",
    "jwks-rsa": "^3.1.0",
    "lru-cache": "^11.0.2",
    "module-alias": "^2.2.3",
    "mongoose": "6.12.3",
    "morgan": "^1.10.0",
    "opossum": "^8.1.3",
    "prom-client": "^15.1.0",
    "response-time": "^2.3.2",
    "socket.io": "^4.7.2",
    "stripe": "^14.8.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "chai": "^4.3.10",
    "dependency-cruiser": "^16.10.0",
    "dpdm": "^3.14.0",
    "jest": "^29.7.0",
    "mocha": "^10.2.0",
    "mongodb-memory-server": "^9.1.6",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "scripts": {
    "start": "node server.cjs",
    "dev": "nodemon server.cjs",
    "test": "NODE_ENV=test jest --config test/config/jest.config.cjs",
    "test:smoke": "NODE_ENV=test node --experimental-json-modules test/smoke.cjs",
    "test:circular": "npx dpdm server.cjs --circular --warning",
    "start:safe": "npm run test:smoke && npm run test:circular && node server.cjs",
    "deploy:metrics": "NODE_ENV=production node scripts/deployMetrics.cjs",
    "monitor:health": "watch -n 60 'curl -s localhost:3000/api/health | jq .circuitBreakers'",
    "test:payments": "NODE_ENV=test jest --config test/config/jest.config.cjs --runInBand --detectOpenHandles test/unit/payments.test.cjs",
    "test:all": "npm run test:smoke && npm run test:payments"
  }
}
